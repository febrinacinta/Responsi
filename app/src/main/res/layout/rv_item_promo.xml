<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="157dp"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F6FA">

        <androidx.cardview.widget.CardView
            android:id="@+id/rvi_promo_img_cont"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/rvi_promo_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel3" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/rvi_promo_img_cont"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rvi_promo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARRY OUTER BROWN"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rvi_promo_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pieces"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rvi_promo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 249.000"
                android:textColor="#3E45AA"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rvi_promo_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Rp 299.000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_rounded_btn_actv"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_check"
                    app:tint="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktifkan"
                    android:textColor="@color/primary_color"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>